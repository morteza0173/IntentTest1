<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemlistActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_itemlistActivity_edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn_itemlistActivity_btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="افزودن به لیست"
        android:background="@drawable/button_background_three"
        android:layout_margin="10dp"/>
    <ListView
        android:id="@+id/listView_itemlistActivity_listViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>