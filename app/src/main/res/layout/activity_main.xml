<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_activityMain_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:hint="نام خود را وارد کنید"/>
    <EditText
        android:id="@+id/et_activityMain_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="نام شهر خود را وارد کنید"/>

    <TextView
        android:id="@+id/tv_activityMain_nameAndCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="#000"/>
    <Button
        android:id="@+id/button_activityMain_setOnThisPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="ست کردن در همین صفحه"
        android:background="@drawable/button_background_one"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <Button
        android:id="@+id/button_activityMain_setOnNextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="ست کردن در صفحه بعدی"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/button_background_two"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_activityMain_showVideoOnNextPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_background_one"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="پخش ویدئو در صفحه بعدی" />

        <Button
            android:id="@+id/btn_activityMain_showAnimOnNextPage"
            android:layout_width="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/button_background_one"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="پخش انیمیشن ها در صفحه بعدی"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</LinearLayout>